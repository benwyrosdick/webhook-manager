{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist-server",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "removeComments": true,
    "noEmit": false
  },
  "include": [
    "src/models/**/*",
    "src/db/**/*",
    "src/lib/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "src/**/__tests__/**/*",
    "src/**/*.test.*",
    "src/**/*.spec.*"
  ]
}